{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "types": [
            "vitest/globals",
            "node",
            "vitest/importMeta",
            "vite/client",
            "vitest"
        ]
    },
    "include": [
        "vite.config.mts",
        "tests/**/*.test.ts",
        "tests**/*.spec.ts",
        "tests/**/*.test.tsx",
        "tests/**/*.spec.tsx",
        "tests/**/*.test.js",
        "tests/**/*.spec.js",
        "tests/**/*.test.jsx",
        "tests/**/*.spec.jsx",
        "tests/**/*.d.ts"
    ]
}
